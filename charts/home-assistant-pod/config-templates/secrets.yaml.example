# ============================================================================
# Secrets Template
# ============================================================================
# Fireball Industries - Patrick Ryan
# "Because hardcoding passwords is for savages"
# ============================================================================

# Location
latitude: 40.7128
longitude: -74.0060
work_latitude: 40.7489
work_longitude: -73.9680

# User IDs (get from user profile in HA)
patrick_user_id: abc123def456

# MQTT Configuration
mqtt_broker: mqtt
mqtt_username: mqtt
mqtt_password: CHANGE-ME-MQTT-PASSWORD

# Database (PostgreSQL)
db_url: postgresql://homeassistant:CHANGE-ME-DB-PASSWORD@postgres/homeassistant

# Weather APIs
openweather_api_key: YOUR_API_KEY_HERE
darksky_api_key: YOUR_API_KEY_HERE

# Notification Services
pushover_api_key: YOUR_PUSHOVER_API_KEY
pushover_user_key: YOUR_PUSHOVER_USER_KEY

telegram_api_key: YOUR_TELEGRAM_BOT_TOKEN
telegram_chat_id: YOUR_TELEGRAM_CHAT_ID

# Voice Assistants
google_assistant_project_id: your-project-id
google_assistant_api_key: YOUR_API_KEY

alexa_client_id: YOUR_ALEXA_CLIENT_ID
alexa_client_secret: YOUR_ALEXA_CLIENT_SECRET

# Cloud Services
nabu_casa_email: your@email.com
nabu_casa_password: YOUR_NABU_CASA_PASSWORD

# IP Cameras
camera_1_url: rtsp://admin:password@192.168.1.100/stream
camera_2_url: rtsp://admin:password@192.168.1.101/stream

# Zigbee2MQTT
zigbee2mqtt_network_key: !secret zigbee2mqtt_network_key_list

zigbee2mqtt_network_key_list:
  - 0x01
  - 0x03
  - 0x05
  - 0x07
  - 0x09
  - 0x0B
  - 0x0D
  - 0x0F
  - 0x00
  - 0x02
  - 0x04
  - 0x06
  - 0x08
  - 0x0A
  - 0x0C
  - 0x0E

# InfluxDB (for long-term storage)
influxdb_host: influxdb.monitoring.svc.cluster.local
influxdb_port: 8086
influxdb_token: YOUR_INFLUX_TOKEN
influxdb_org: home
influxdb_bucket: homeassistant

# Grafana
grafana_url: http://grafana.monitoring.svc.cluster.local:3000
grafana_api_key: YOUR_GRAFANA_API_KEY

# OPC-UA (Industrial)
opcua_server_1: opc.tcp://192.168.10.10:4840
opcua_username: opcuser
opcua_password: CHANGE-ME-OPC-PASSWORD

# Modbus (Industrial)
modbus_host_1: 192.168.10.30
modbus_port_1: 502

# SNMP Community Strings
snmp_community: public
snmp_community_rw: private
