{
  "dashboard": {
    "title": "CODESYS TargetVisu - Overview",
    "tags": ["codesys", "targetvisu", "hmi", "industrial"],
    "timezone": "browser",
    "panels": [
      {
        "title": "Pod Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job='codesys-targetvisu'}",
            "legendFormat": "Status"
          }
        ]
      },
      {
        "title": "CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{pod=~'.*targetvisu.*'}[5m])",
            "legendFormat": "CPU"
          }
        ]
      },
      {
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{pod=~'.*targetvisu.*'}",
            "legendFormat": "Memory"
          }
        ]
      },
      {
        "title": "Connected Clients",
        "type": "graph",
        "targets": [
          {
            "expr": "codesys_visu_connected_clients",
            "legendFormat": "Clients"
          }
        ]
      },
      {
        "title": "Uptime",
        "type": "stat",
        "targets": [
          {
            "expr": "time() - process_start_time_seconds{job='codesys-targetvisu'}",
            "legendFormat": "Uptime"
          }
        ]
      }
    ]
  }
}
